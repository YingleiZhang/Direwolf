<% if @employer.pending %>
<div class="row">
  <div class="alert alert-danger" role="alert">
    Your status is pending, you will be able to view this once your application has been accepted.
  </div>
</div>
<% end %>

<div class="row">
  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%=@employer.company_name%>'s Profile</h3>
      </div>

      <div class="panel-body">
        <%if @employer%>
          <form class="form-horizontal" role="form">
            <div class="form-group">
              <label class="col-md-4 control-label">Contact:</label>
              <div class="col-md-8">
                <p class="form-control-static"><%= @employer.name %></p>
              </div>
            </div>
            <div class="field">
              <label class="col-md-4 control-label">Email:</label>
              <div class="col-md-8">
                <p class="form-control-static"><%= @employer.email %></p>
              </div>
            </div>
          </form>
          <%= link_to "Edit Profile", edit_employer_path(@employer.id), class: "col-md-offset-5 btn btn-primary" %>
      </div>
        <%end%>
    </div>
  </div>

<% if !@employer.pending %>
  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Jobs Table</h3>
      </div>
      <table class="table table-striped">
        <thead>
        <tr>
          <th>#</th>
          <th>First Name</th>
          <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        <% if @jobs %>
          <% @jobs.each_index do |x| %>
            <tr>
              <td class="col-md-1">
                <%= x+1 %>
              </td>
              <td class="col-md-6">
                <%= @jobs[x].title %>
              </td>
              <td class="col-md-5">
                <div class="btn-group">
                  <%= link_to "Show", job_path(@jobs[x].id), class: "btn btn-primary" %>
                  <%= link_to "Edit", edit_job_path(@jobs[x].id), class: "btn btn-success" %>
                  <%= link_to "Delete", job_path(@jobs[x].id), :method=> :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
                </div>
              </td>
            </tr>
          <% end %>
        <% end %>
        </tbody>
      </table>
      <%= link_to "New Job Posting", new_job_path, class: "btn btn-success btn-block" %>
    </div>
  </div>
<% end %>
</div>

