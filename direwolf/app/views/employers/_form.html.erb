<%= form_for @employer, :html => {:class => "form-horizontal center"} do |f| %>
  <% if @employer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@employer.errors.count, "error") %> prohibited this employer from being saved:</h2>

      <ul>
      <% @employer.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <form class="form-horizontal">
    <fieldset>

      <legend><%= title %></legend>

      <!-- Text input-->
      <div class="form-group">
        <div class="field">
          <%= f.label :name, "Name of Contact:", class: "col-md-4 control-label", for: "name" %>
          <div class="col-md-4">
            <%= f.text_field :name , class: "form-control input-md", placeholder: "Full Name", value: current_user.name %>
          </div>
        </div>
      </div>

      <!-- Text input-->
      <div class="form-group">
        <div class="field">
          <%= f.label :company_name, "Company Name:", class: "col-md-4 control-label", for: "name" %>
          <div class="col-md-4">
            <%= f.text_field :company_name , class: "form-control input-md", placeholder: "Company Inc." %>
          </div>
        </div>
      </div>

      <!-- Text input-->
      <div class="form-group">
        <div class="field">
          <%= f.label :email, "Email Address:", class: "col-md-4 control-label", for: "email" %>
          <div class="col-md-4">
            <%= f.text_field :email , class: "form-control input-md", placeholder: "chicken_nuggets@example.com" %>
          </div>
        </div>
      </div>

      <!-- Button -->
      <div class="form-group">
        <label class="col-md-4 control-label" for="submit"></label>
        <%= f.submit 'Save', class: 'col-md-offset-1 btn btn-primary' %>
      </div>

    </fieldset>
  </form>

<% end %>
