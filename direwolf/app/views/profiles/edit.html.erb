<h1>Listing profiles</h1>

<table>
  <%if false%>
      <thead>
      <tr>
        <th>Name</th>
      </tr>
      <tr>
        <th>Email</th>
      </tr>
      <tr>
        <th>Phone number</th>
      </tr>
      <tr>
        <th>Skills</th>
      </tr>
      <tr>
        <th>Resume</th>
      </tr>
      <tr>
        <th></th>
        <th></th>
        <th></th>
      </tr>
      </thead>
  <%end%>

  <tbody>
  <% @profiles.each do |profile| %>
      <tr>
        <td>Name</td>
        <td><%= profile.name %></td>
      </tr>
      <tr>
        <td>Email</td>
        <td><%= profile.email %></td>
      </tr>
      <tr>
        <td>Phone</td>
        <td><%= profile.phone_number %></td>
      </tr>
      <tr>
        <td>Skills</td>
        <td><%= profile.skills %></td>
      </tr>
      <tr>
        <td>Resume</td>
        <td><%= profile.resume %></td>
      </tr>
      <tr>
        <td><%= link_to 'Show', profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

